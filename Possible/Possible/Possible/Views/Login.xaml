<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Possible.Views.Login">

    <AbsoluteLayout>


        <Label Text="Número de telefone" FontAttributes="Bold"
               AbsoluteLayout.LayoutBounds="0.55,0.35,0.6,0.2" Style="{StaticResource NormalTitleStyle}"
               AbsoluteLayout.LayoutFlags="All"></Label>

        <Entry Placeholder="(xx)xxxxxxxxx"  AbsoluteLayout.LayoutBounds="0.5,0.35,0.8,0.06" 
               AbsoluteLayout.LayoutFlags="All" Visual="Default" BackgroundColor="Transparent" Style="{StaticResource MainEntryStyle}"
               Text="{Binding Login}" HorizontalTextAlignment="Center" PlaceholderColor="Gray"></Entry>
     
        <Button Text="Enviar" Command="{Binding LoginCommand}" BackgroundColor="#dd2705" Style="{StaticResource MainButtonStyle}"
                TextColor="White" AbsoluteLayout.LayoutBounds="0.5,0.49,0.538,0.06" AbsoluteLayout.LayoutFlags="All" ></Button>



    </AbsoluteLayout>

</ContentPage>